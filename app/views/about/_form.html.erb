<%= form_with model: @about do |form| %>
<div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% @about.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
<div>
    <%= form.label :body %>
    <%= form.text_area :body %>
    <% @about.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
</div>
<div>
    <%= form.label :price %>
    <%= form.text_field :price %>
</div>
<div>
    <%= form.label :part_number %>
    <%= form.text_field :part_number %>
</div>
<div>
    <%= form.submit %>
</div>
<% end %>